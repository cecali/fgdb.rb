
# identify each file with a tab in it
# auto suppress files in these subdirs:  .svn/, db/, images/, tmp/
for f in `find . -type f |egrep -v '\.svn|/db/|/images/|/tmp/'`; do grep -l -f tab_PATT $f>> /tmp/tabfiles; done

