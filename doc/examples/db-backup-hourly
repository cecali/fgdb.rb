#!/bin/bash
/usr/sbin/logrotate -f /usr/local/backup/database_logrotate.conf
su - postgres -c "nice pg_dump -X use-set-session-authorization -C fgdb.rb | nice gzip > /usr/local/backup/database.sql.gz"
