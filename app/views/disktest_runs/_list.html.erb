<table style="white-space:nowrap; width: 100%;">
  <tr>
    <th>Disktest Run ID</th>

    <th>Vendor</th>
    <th>Size</th>
    <th>Type</th>
    <th>Model</th>
    <th>Serial Number</th>

    <th>Started At</th>
    <th>Completed At</th>

    <th>Status</th>
    <th>Failure Reason</th>
  </tr>
  <% for dr in @disktest_runs %>
    <tr>
      <td><%= h(dr.id) %></td>

      <td><%= h(dr.vendor) %></td>
      <td><%= h(dr.display_size) %></td>
      <td><%= h(dr.bus_type) %></td>
      <td><%= h(dr.model) %></td>
      <td><%= h(dr.serial_number) %></td>

      <td><%= h(dr.started_at) %></td>
      <td><%= h(dr.completed_at) %></td>

      <td><%= h(dr.result) %></td>
      <td><%= h(dr.failure_details) %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @disktest_runs, :params => {:conditions => params[:conditions]} %>
