<h2><%= params[:controller].humanize %>:</h2>

<%= has_privileges('admin_skedjul') ? (link_to "add intern", :action => "add_shift", :controller => (params[:controller] == "assignments") ? "volunteer_events" : "volunteer_default_events") : "" %>
<% to_action = "index" %>

<% if params[:controller] == "volunteer_shifts" %>
<%= link_to "Add new class event", :controller => "volunteer_events", :action => "new_class" %>
<% end %>

<div>
<h3>By Schedule</h3>
<%= link_to "ALL", {:action => to_action, :conditions => {:empty_enabled => "true"}} %>
<% Sked.find(:all).each do |x| %>
<%= link_to x.name, {:action => to_action, :conditions => {:sked_enabled => "true", :sked_id => x.id}} %>
<% end %>
</div>

<div>
<h3>By Roster</h3>
<% Roster.find(:all).each do |x| %>
<%= link_to x.name, {:action => to_action, :conditions => {:roster_enabled => "true", :roster_id => x.id}} %>
<% end %>
</div>
