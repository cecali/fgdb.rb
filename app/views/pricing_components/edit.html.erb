<h1>Editing pricing component</h1>

<% form_for(@pricing_component, :url => {:action => "update", :id => @pricing_component.id}) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "form", :locals => {:f => f} %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', session[:pricing_refer] || {:controller => "pricing_types"} %>
