<div id="sidebar">
  <% if has_role?("ROLE_VOLUNTEER_MANAGER") %>
    hours
    <div class="sidebar_section">
      <div>
        <%= link_to "entry", :controller => 'volunteer_tasks' %>
      </div>
<!--
      <div>
        <%= link_to "search", :controller => 'volunteer_tasks', :action => 'listing' %>
      </div>
-->
    </div>
  <% elsif current_user and current_user.contact_id %>
    hours
    <div class="sidebar_section">
      <div>
        <%= link_to "entry", :controller => 'volunteer_tasks', :contact_id => current_user.contact_id %>
      </div>
    </div>
  <% end %>


  <% required_roles = {:donation => ["ROLE_FRONT_DESK"],
                       :sale => ["ROLE_STORE"],
                       :recycling => nil,
                       :disbursement => ['ROLE_CONTACT_MANAGER', 'ROLE_FRONT_DESK', 'ROLE_STORE', 'ROLE_VOLUNTEER_MANAGER']} %>

  <% required_roles.each do |key, roles| -%>
    <% if roles.nil? || has_role?(roles) -%>
      <% controller = key.to_s -%>
      <%= controller %>s
      <div class="sidebar_section">
        <div>
          <%= link_to "entry", :controller => controller + 's' %>
        </div>
        <div>
          <%= link_to "search", :controller => controller + 's', :action => 'search' %>
        </div>
      </div>
    <% end -%>
  <% end -%>

  reports
  <div class="sidebar_section">
    <div>
      <%= link_to "income", :controller => 'reports', :action => 'income' %>
    </div>
    <div>
      <%= link_to "gizmos", :controller => 'reports', :action => 'gizmos' %>
    </div>
    <div>
      <%= link_to "volunteering", :controller => 'reports', :action => 'volunteers' %>
    </div>
    <div>
      <%= link_to "hours",
          :controller => 'reports',
          :action => 'hours' %>
    </div>
  </div>

  everything else
  <div class="sidebar_section">
    <% if has_role?('ROLE_CONTACT_MANAGER', 'ROLE_FRONT_DESK', 'ROLE_STORE', 'ROLE_VOLUNTEER_MANAGER') %>
      <div>
        <%= link_to "contacts", :controller => 'contacts' %>
      </div>
    <% end %>
    <div>
      <%= link_to "printme", :controller => 'spec_sheets' %>
    </div>
  </div>
</div>
