<div id="computer">
  <h2>Computer</h2>
  <table>
    <tr>
      <td>
        Vendor:
      </td>
      <td>
        <%= @report.system.vendor %>
      </td>
    </tr>
    <tr>
      <td>
        Model:
      </td>
      <td>
        <%= @report.system.model %>
      </td>
    </tr>
    <tr>
      <td>
        Serial Number:
      </td>
      <td>
        <%= @report.system.serial_number %>
      </td>
    </tr>
    <% xml_foreach("class", "processor") do %>
      <% if xml_if("product") %>
        <tr>
          <td>
            Processor:
          </td>
          <td>
            <%= xml_value_of("product") %>
          </td>
        </tr>
        <% if xml_if("size") %>
          <tr>
            <td>
              Speed:
            </td>
            <td>
              <%= xml_value_of("size").to_hertz %>
            </td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
    <tr>
      <td>
        BIOS Version:
      </td>
      <td>
        <%= xml_first("id", "firmware") do xml_value_of("version") end %>
      </td>
    </tr>
    <% find_the_biggest("id", "usbhost", "capability", "USB ") do |value| %>
    <tr>
      <td>
        USB Version:
      </td>
      <td>
        <% value %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
