<div id="computer">
  <h2>Computer</h2>
  <table>
    <tr>
      <td>
        Vendor:
      </td>
      <td>
        <%= @report.system.vendor %>
      </td>
    </tr>
    <tr>
      <td>
        Model:
      </td>
      <td>
        <%= @report.system.model %>
      </td>
    </tr>
    <tr>
      <td>
        Serial Number:
      </td>
      <td>
        <%= @report.system.serial_number %>
      </td>
    </tr>
    <% xpath_foreach("//node[@class='processor']") do %>
      <% if xpath_if("product") %>
        <tr>
          <td>
            Processor:
          </td>
          <td>
            <%= xpath_value_of("product") %>
          </td>
        </tr>
        <% if xpath_if("size") %> 
          <tr>
            <td>
              Speed:
            </td>
            <td>
              <%= xpath_value_of("size").to_hertz %>
            </td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
    <tr>
      <td>
        BIOS Version:
      </td>
      <td>
        <%= xpath_value_of("//node[@id='firmware']/version") %>
      </td>
    </tr>
    <% find_the_biggest("//node[contains(@id, 'usbhost')]", "capabilities/capability", "USB ") do |value| %>
    <tr>
      <td>
        USB Version:
      </td>
      <td>
        <%= value %>
      </td>
    </tr>  
    <% end %>
  </table>
</div>
