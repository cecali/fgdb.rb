  <div id="memory">
	<h2>Memory</h2>
	<% xml_foreach("id", "memory") do %>
	<% if (has_size = xml_if("size", '/')) || xml_if("capacity", '/') %>
	<table>
	  <tr>
		<td>
		  Size:
		</td>
		<td>
          <%= xml_value_of((has_size ? "size" : "capacity"), '/').to_bytes(1) %>
		</td>
	  </tr>
	</table>
	<% end %>
	<% xml_foreach("id", "bank") do %>

	<h3>
	  <%= xml_value_of("@id") %>
	</h3>
	<div class="indent">
	  <table>
		<tr>
		  <td>
			Description:
		  </td>
		  <td>
		    <%= xml_value_of("description") %>
		  </td>
		</tr>
		<% if xml_if("size") %>
		<tr>
		  <td>
			Size:
		  </td>
		  <td>
		    <%= xml_value_of("size").to_bytes %>
		  </td>
		</tr>
		<% end %>
	  </table>
    </div>
	<% end %>
	<% end %>
  </div>
