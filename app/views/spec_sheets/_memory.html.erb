  <div id="memory">
	<h2>Memory</h2>
	<% xpath_foreach("//node[contains(@id, 'memory')]") do %>
	<% if xpath_if("size") %>
	<table>
	  <tr>
		<td>
		  Size:
		</td>
		<td>
          <%= xpath_value_of("size").to_bytes(1) %>
		</td>
	  </tr>
	</table>
	<% end %>
	<% xpath_foreach("node[contains(@id, 'bank')]") do %>
	
	<h3>
	  <%= xpath_value_of("@id") %>
	</h3>
	<div class="indent">
	  <table>
		<tr>
		  <td>
			Description:
		  </td>
		  <td>
			<%= xpath_value_of("description") %>
		  </td>
		</tr>
		<% if xpath_if("size") %>
		<tr>
		  <td>
			Size:
		  </td>
		  <td>
            <%= xpath_value_of("size").to_bytes %>
		  </td>
		</tr>
        <% end %>
	  </table>
    </div>
	<% end %>
	<% end %>
  </div>
