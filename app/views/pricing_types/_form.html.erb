  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :base_value, "Base Price (before multiplier)" %><br />
    <%= f.text_field :base_value %>
  </p>
  <p>
    <%= f.label :base_value, "Multiplier (for sum of base price and pricing component values)" %><br />
    <%= f.text_field :base_value %>
  </p>
  <p>
    <%= f.label :type_id, "Build Type (optional for automatic detection)" %><br />
    <%= f.select :type_id, ["<none>", nil] + Type.all.map{|x| [x.name.titleize, x.id]} %>
  </p>
  <p>
    <%= f.label :pull_from, "Pulled Value to Match Against (optional for automatic detection)" %><br />
    <%= f.select :pull_from, ["<none>", nil] + SystemPricing.valid_pulls.map{|x| [x.to_s.titleize, x.to_s]} %>
  </p>
  <p>
    <%= f.label :matcher, "Value to Match Pulled Value Against" %><br />
    <%= f.text_field :matcher %>
  </p>
<% if f.object.id %>
  <% PricingComponents.each do |x| %>
    <li>
      <% field_id = "pricing_component_#{x.id}" %>
      <%= label_tag field_id, x.name -%>
      <%= check_box_tag "#{f.object_name}[pricing_component_ids][]", x.id, f.object.pricing_components.include?(x), {:id => field_id} -%>
    </li>
  <% end %>
<% end %>
