<div id="form-header">
<h1>Go to report:</h1>

<% if @error!=nil %>
<span style="color: red">ERROR: <%= @error %></span>
<% end %>

</div>

<div id="main-section">
<table>
<tr><td colspan="2">
<%= link_to "List all", :action => "list_all" %>
</td></tr>
<tr><td colspan="2">
<%= link_to "List flagged", :action => "list_flagged" %>
</td></tr>
<tr><td>
Get report by report id:
</td><td>
<% form_tag ({:action => "list_for_report"}) do %>
<%= text_field("id", nil) %><%= submit_tag "Get Report" %>
<% end %>
</td></tr>
<tr><td>
List for one contact:
</td><td>
<% form_tag ({:action => "list_for_contact"}) do %>
<%= text_field("id", nil) %><%= submit_tag "Get Reports" %>
<% end %>
</td></tr>
<tr><td>
List for one system:
</td><td>
<% form_tag ({:action => "list_for_system"}) do %>
<%= text_field("id", nil) %><%= submit_tag "Get Reports" %>
<% end %>
</td></tr>
<tr><td colspan="2">
<%= link_to 'New report', {:action => "new"} %>
</td></tr>
<tr><td colspan="2">
<%= link_to 'Roles', {:action => "roles_index"} %>
</td></tr>
<tr><td colspan="2">
<%= link_to 'Types', {:action => "types_index"} %>
</td></tr>
</table>
</div>
