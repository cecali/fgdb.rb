  <div id="posted_info">
    <h2>Gizmo Info</h2>
    <table>
      <tr>
        <td>
          Date:
        </td>
        <td>
          <%= @report.created_at.strftime("%D %I:%M%p") %>
        </td>
      </tr>
      <tr>
        <td>
          System ID:
        </td>
        <td>
          <%= @report.system_id %>
        </td>
      </tr>
      <tr>
        <td>
          Type:
        </td>
        <td>
          <%= @report.type && @report.type.name || "Unknown" %>
        </td>
      </tr>
      <tr>
        <td>
          Report ID:
        </td>
        <td>
          <%= @report.id %>
        </td>
      </tr>
      <tr>
        <td>
          OS:
        </td>
        <td>
          <%= @report.os %>
        </td>
      </tr>
      <tr>
        <td>
          Job:
        </td>
        <td>
          <%= @report.role && @report.role.name || "Unknown" %>
        </td>
      </tr>
      <tr>
        <td>
          Technician:
        </td>
        <td>
          <%= @report.contact_id %>
        </td>
      </tr>
      <tr>
        <td>
          Old ID:
        </td>
        <td>
          <%= @report.old_id %>
        </td>
      </tr>
      <tr>
        <td class="line_label">
          Instructor Initials:
        </td>
        <td>
          <br />
          _________________________
        </td>
      </tr> 
      <% if @report.type == Type.find_by_name("laptop") %>
      <tr>
        <td class="line_label">
          Battery Life:
        </td>
        <td>
          <br />
          _________________________
        </td>
      </tr>
      <tr>
        <td class="line_label">
          Suspend States:
        </td>
        <td>
          <br />
          _________________________
        </td>
      </tr>
      <tr>
        <td class="line_label">
          Wireless Capabilities:
        </td>
        <td>
          <br />
          _________________________
        </td>
      </tr>
      <% end %>
      <tr>
        <td>
          Notes:
        </td>
        <td>
          <%= @report.notes.gsub("\n", "<br />") %>
        </td>
      </tr>
    </table>
  </div>
