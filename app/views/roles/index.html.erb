<h1>Listing roles</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for role in @roles %>
  <tr>
    <td><%= role.name %></td>
    <td><%= link_to 'Show', :action=>"show", :id=>role.id %></td>
    <td><%= link_to 'Edit', :action=>"edit", :id=>role.id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New role', :action=>"new" %>
