<% params[:gizmo_context_id] ||= @gizmo_context.id %>

<%= js = "gizmo_context = '#{h @gizmo_context.to_s}';"
    js += "show_description=0;"
    js += "bind_key('ctrl-e', toggle_description);";
    javascript_tag js %>

<table id="gizmo_event_lines">
  <tr>
    <th>type</th>
    <th class="description invisible">description</th>
    <th>qty</th>
    <% if params[:controller] == "sales" %>
    <th>system id</th>
    <% else # donations %>
      <% if coveredness_enabled %>
        <th>covered</th>
      <% end %>
    <% end %>
    <th>unit price</th>
    <th>total price</th>
    <th></th>
    <% if @transaction.gizmo_events %>
      <% @gizmos_and_payments_js ||= ""
         for line in @transaction.gizmo_events.not_discount
           price = 0
           description = ''
           if @gizmo_context.name == "sale"
             price = line.unit_price
           elsif @gizmo_context.name == "donation"
             price = line.fee_cents.to_dollars
           else
             raise "BUG"
           end
           if defined?(line.description)
             description = line.description
           else
             description = ''
           end
           hash = {:gizmo_type_id => line.gizmo_type_id, :gizmo_count => line.gizmo_count, :unit_price => price, :description => description}
           hash[:system_id] = line.system_id if line.system_id
           hash[:covered] = line.covered.nil? ? "undefined" : (line.covered == true ? "true" : "false") if params[:controller] == "donations" && coveredness_enabled
           @gizmos_and_payments_js += "add_gizmo_event(#{hash.to_json});"
         end
         %>
    <% end %>

  <tr id="form">
    <td><select id="gizmo_type_id" onchange="<%= h @gizmo_context.name %>_gizmo_type_selected();">
        <%= gizmo_events_options_for_transaction %>
      </select></td>
    <td class="description invisible"><input name="description" id="description" size="10"></td>
    <%= javascript_tag "" %>
    <td><input name="gizmo_count" id="gizmo_count" size="6" onkeydown="handle_ge(event);"></td>
    <% if params[:controller] == "sales" %>
    <td><input name="system_id" id="system_id" size="6" onkeydown="handle_ge(event);"></td>
    <% else # donations %>
      <% if coveredness_enabled %>
        <td><input name="covered" id="covered" type="checkbox" onkeydown="handle_ge(event);" checked="checked" onchange="<%= h @gizmo_context.name %>_gizmo_type_selected()"></td>
      <% end %>
    <% end %>
    <td><input name="unit_price" id="unit_price" size="8" onkeydown="if(is_tab(event)) {return handle_gizmo_events();}"></td>
    <td></td>
  </tr>
</table>
