<% params[:gizmo_context_id] ||= @gizmo_context.id %>
<%= javascript_tag "gizmo_context = '#{escape_javascript h @gizmo_context.to_s}';"%>

<table id="gizmo_event_lines">
  <tr>
    <th>type</th>
    <th>qty</th>
    <% if params[:controller] == "disbursements" %>
      <th>system id</th>
    <% elsif params[:controller] == "recyclings" %>
      <% if Contract.usable.length > 1 %>
      <th>contract</th>
      <% end %>
    <% end %>
      <% if coveredness_enabled %>
        <th>covered</th>
      <% end %>
    <th></th>
    <% if @transaction.gizmo_events %>
      <% @js = ""
          for line in @transaction.gizmo_events
           hash = {:gizmo_type_id => line.gizmo_type_id, :gizmo_count => line.gizmo_count}
           hash[:system_id] = line.system_id if line.system_id
           hash[:contract_id] = line.recycling_contract_id if line.recycling_contract_id
           hash[:covered] = line.covered.nil? ? "undefined" : (line.covered == true ? "true" : "false") if params[:controller] == "recyclings" && coveredness_enabled
           @js += "add_gizmo_event(#{hash.to_json});"
          end
          %>
    <% end %>
  <tr id="form">
    <td><select id="gizmo_type_id" onchange="<%= h @gizmo_context.name %>_gizmo_type_selected()">
        <%= gizmo_events_options_for_transaction %>
      </select></td>
    <td><input name="gizmo_count" id="gizmo_count" size="6" onkeydown="handle_ge(event);"></td>
    <% if params[:controller] == "disbursements" %>
      <td><input name="system_id" id="system_id" size="6" onkeydown="handle_ge(event);"></td>
    <% elsif params[:controller] == "recyclings" %>
      <% if Contract.usable.length > 1 %>
        <td><select id="contract_id" onkeydown="handle_ge(event);">
            <%= options_from_collection_for_select([Contract.find_by_name("default")] + Contract.usable.delete_if{|x| x.name == "default"}.sort_by(&:description), "id", "description") %>
          </select></td>
      <% end %>
    <% end %>
      <% if coveredness_enabled %>
        <td><input name="covered" id="covered" type="checkbox" onkeydown="handle_ge(event);" checked="checked"></td>
      <% end %>
    <td></td>
  </tr>

  <% if @transaction.gizmo_events %>
    <%= javascript_tag @js %>
  <% end %>
</table>
