<table id="payment_lines">
<tr>
  <th>Payment Method</th>
  <th>Amount</th>
  <th></th>
<tr>
<% if @transaction.payments %>
<% for line in @transaction.payments %>
<%= javascript_tag "add_payment(#{line.payment_method_id}, #{line.amount});" %>
<% end %>
<% end %>

<tr>
  <td><select id="payment_method_id">
    <%= options_from_collection_for_select(PaymentMethod.find(:all).sort_by(&:description), "id", "description") %>
  </select></td>
  <td><input id="payment_amount" name="payment_amount" onkeydown="if(event.keyCode==9) {return add_payment_from_form();}"/></td>
</tr>
</table>
