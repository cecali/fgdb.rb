<% @search_results = [ contact ] if( contact ) -%>
<label for="contact_query">Search for a contact:</label>
<%= text_field_tag :contact_query, nil, :name => nil -%>
<div id="<%= search_results_id(params) %>" />

<%= observe_field :contact_query,  :frequency => 0.5,
                  :update => search_results_id(params),
                  :url => { :controller => 'contacts', :action => 'search_results' },
                  :with => "'contact_query=' + escape(value)" -%>
