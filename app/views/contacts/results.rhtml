<% if @contacts.length > 0 -%>
  <% for contact in @contacts -%>
    <%
      types = contact.contact_types.collect {|t| t.description}
      types.unshift('person') if contact.is_person?
    -%>
    <option value="<%=h contact.id %>"><%=h contact.id %>: <%=h contact %> (<%=h types.join ', ' %>)</option>
  <% end %>
<% else %>
  <option value="">No matching contacts</option>
<% end %>
