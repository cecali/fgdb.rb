@options = { :scaffold_id => params[:scaffold_id], :action => params[:referring_action], :id => params[:id] }

if @successful
  page.replace_html form_insertion_div_id(@options), ''
  if params[:restore_focus]
    page << "Form.enable($('#{params[:restore_focus]}').form.id);"
    page << "Field.focus('#{params[:restore_focus]}');"
  end
else
  page.hide loading_indicator_id(@options)
end
